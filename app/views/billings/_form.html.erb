<div class="row">
  <div class="col-sm-8 col-md-8">
  <%= form_for(@billing, :html => { class:"form-horizontal", role:"form"}) do |f| %>
    <% if @billing.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@billing.errors.count, "error") %> prohibited this donatur from being saved:</h2>

        <ul>
        <% @billing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :user, "Nama", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %><br>
      <div class="col-sm-8 col-md-4"><%= f.text_field :user, class:"form-control weight", id:"inputText3", placeholder:"input nama" %></div>
    </div>
	
    <div class="form-group">
      <%= f.label :time_in, "Waktu Masuk", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %><br>
      <div class="col-sm-8 col-md-4"><%= f.time_select :time_in, class:"form-control weight", id:"inputText3"%></div>
    </div>
	
    <div class="form-group">
      <%= f.label :time_out, "Waktu Keluar", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %><br>
      <div class="col-sm-8 col-md-4"><%= f.time_select :time_out, class:"form-control weight", id:"inputText3" %></div>
    </div>
    
    <div class="form-group">
      <%= f.label :duration, "Lama", for: "inputText3", class:"col-sm-3 col-md-3 control-label weight" %><br>
      <div class="col-sm-8 col-md-4"><%= f.time_select :duration, class:"form-control weight", id:"inputText3" %></div>
    </div>
	
	
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-3 col-md-offset-3">
         <%= action_name == "new" ? (f.submit "Buat Billing", class:"btn btn-success"):(f.submit "Edit Billing", class:"btn btn-success") %>
      </div>
    </div>
  <% end %>
  </div>
</div>

