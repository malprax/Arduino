<div class="container">
	<h1>Billings</h1>

	<table class="table table-bordered table-striped">
	  <thead>
	    <tr>
	      <th>User</th>
	      <th>Jam Masuk</th>
	      <th>Jam Keluar</th>
	      <th>Lama</th>
	      <th>Biaya</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @billings.each do |billing| %>
	      <tr>
	        <td><%= billing.user %></td>
	        <td><%= billing.time_in.to_s %></td>
	        <td><%= billing.time_out.to_s %></td>
			<% unless billing.time_out.nil? %>
			<% lama = ((billing.time_out - billing.time_in)/3600) %>
	        <td><%= number_with_precision(lama, precision: 2) %></td>
	        <td>Rp <%= number_with_precision(lama, precision: 2).to_i * 1000 %></td>
			<% else %>
			<td></td>
			<td></td>
			<% end %>

	        <td><%= link_to 'Stop', stop_billing_path(billing), class: 'btn btn-danger', method: :patch %></td>
	        <td><%= link_to 'Edit', edit_billing_path(billing) %></td>
	        <td><%= link_to 'Destroy', billing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Billing', new_billing_path, class: 'btn' %>
    <%= link_to 'Portal', root_path, class: 'btn btn-default' %>
	
</div>
