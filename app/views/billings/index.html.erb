<div class="container">
	<p id="notice"><%= notice %></p>

	<h1>Billings</h1>

	<table class="table table-bordered table-striped">
	  <thead>
	    <tr>
	      <th>User</th>
	      <th>Time in</th>
	      <th>Time out</th>
	      <th>Duration</th>
	      <th>Price</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @billings.each do |billing| %>
	      <tr>
	        <td><%= billing.user %></td>
	        <td><%= billing.time_in %></td>
	        <td><%= billing.time_out %></td>
	        <td><%= billing.duration %></td>
	        <td><%= billing.price %></td>
	        <td><%= link_to 'Show', billing, class: 'btn btn-warning' %></td>
	        <td><%= link_to 'Edit', edit_billing_path(billing) %></td>
	        <td><%= link_to 'Destroy', billing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'New Billing', new_billing_path, class: 'btn' %>
	
</div>
