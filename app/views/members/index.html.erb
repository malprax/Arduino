<% if @members.present? %>

	<div class="row">
		<div class="col-md-12"><h3>Daftar Member</h3></div>
		
	</div>
	
    
	
	<div class="row">
		<div class="col-md-12">
			<%= link_to 'Buat Member', new_member_path, remote: true, class: 'btn btn-default' %>
		    <%= form_tag members_path, :method => 'get', :id => "search",class:'navbar-form navbar-right', role: 'search' do%>
		    <div class="form-group">
		      <div class="col-xs-6 col-sm-4 col-md-4">
		        <%= text_field_tag :search, params[:search], class:'form-control', placeholder:'Cari..' %>
		      </div>
		      <%= submit_tag "Cari", :name => nil, class:'btn btn-success col-xs-offset-0 col-xs-2 col-sm-offset-5 col-sm-3 col-md-offset-5 col-md-3' %>
		    </div>    
		    <% end %>
		</div>
	</div>
	
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-success">
				<div class="panel-heading"></div>
				<table class="table table-hover table-striped">
				  <thead>
				    <tr>
				      <th>Nama</th>
				      <th>Alamat</th>
				      <th>Telepon</th>    
				      <th colspan="2"></th>
				    </tr>
				  </thead>

				  <tbody class="member-index">
				    <%= render 'index' %>
				  </tbody>
				</table>
				<br>
			</div>
      <div id="member-modal" class="modal fade"></div>
		</div>
		<div class="col-xs-12 col-sm-12 col-md-12"><center><%= will_paginate @members, renderer: BootstrapPagination::Rails %></center></div>
	</div>


<% else %>
	<div class="row">
		<div class="col-md-12"><h3>Member Tidak Ditemukan. </h3></div>
		<div class="col-md-12"><%= link_to 'Kembali', members_path, class: 'btn btn-default' %></div>
	</div>
<% end %>

