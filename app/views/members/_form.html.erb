<div class="row">
  <div class="col-xs-12 col-xs-offset-2 col-sm-offset-1 col-sm-12 col-md-12 col-md-offset-1 col-lg-12 col-lg-offset-1">
  <%= form_for(@member, :html => { class:"form-horizontal", role:"form"}) do |f| %>
    <% if @member.errors.any? %>
      <div id="error_explanation">
        <h4><%= @member.errors.count %> Kesalahan, Tidak Dapat Menyimpan Billing Yang Dibuat Karena:</h4>

        <ul>
        <% @member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
 	<div class="form-group">
      <%= f.label :name, "Nama", for: "inputText3", class:"col-xs-12 col-sm-3 col-md-3 control-label weight" %>
	  <div class="col-xs-8 col-sm-5 col-md-5"><%= f.text_field :name, class:"form-control weight", id:"inputText3" %></div>
    </div>
	
 	<div class="form-group">
      <%= f.label :address, "Alamat", for: "inputText3", class:"col-xs-12 col-sm-3 col-md-3 control-label weight" %>
	  <div class="col-xs-8 col-sm-5 col-md-5"><%= f.text_field :address, class:"form-control weight", id:"inputText3" %></div>
    </div>
	
 	<div class="form-group">
      <%= f.label :phone, "Telepon", for: "inputText3", class:"col-xs-12 col-sm-3 col-md-3 control-label weight" %>
	  <div class="col-xs-8 col-sm-5 col-md-5"><%= f.text_field :phone, class:"form-control weight", id:"inputText3" %></div>
    </div>
	
	<div class="form-group">
      <div class="col-sm-offset-3 col-sm-3 col-md-offset-3">
         <%= action_name == "new" ? (f.submit "Buat Member", class:"btn btn-success"):(f.submit "Edit Member", class:"btn btn-success") %>
      </div>
    </div>
  <% end %>
  </div>
</div>


